generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  status    Status @default(ACTIVE)
  portfolios Portfolio[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  
  @@map("users")
  @@unique([email,deletedAt], name: "unique_email_deletedAt")
}

model Portfolio {
  id        String   @id @default(uuid())
  name      String   
  slug      String   
  published Boolean  @default(false)
  status    Status @default(ACTIVE)
  theme     Json     @default("{}")
  sections  Json     @default("[]")
  
  metaTitle       String?
  metaDescription String?
  favicon         String?
  
  views     Int      @default(0)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  
  @@index([userId])
  @@index([slug])
  @@map("portfolios")
  @@unique([name, slug,deletedAt], name: "unique_name_slug_deletedAt")
}
