// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  
  portfolios Portfolio[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Portfolio {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  published Boolean  @default(false)
  
  // Store the entire portfolio configuration as JSON
  theme     Json     @default("{}")
  sections  Json     @default("[]")
  
  // SEO and metadata
  metaTitle       String?
  metaDescription String?
  favicon         String?
  
  // Analytics
  views     Int      @default(0)
  
  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([slug])
  @@unique([name, slug])
  @@map("portfolios")
}
